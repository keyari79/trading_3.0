    targetAtrText = str.tostring(rrRatio, "#.#") + "R (" + str.tostring(targetDistance, format.mintick) + ")"
    table.cell(setupTable, 2, 14, targetAtrText, text_color=color.new(#B0BEC5, 0), bgcolor=color.new(#1C2428, 0), text_size=txtSize)
    
