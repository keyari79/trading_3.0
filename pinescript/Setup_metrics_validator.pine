    stopAtrText = str.tostring(stopMultiplierAdjusted, "#.#") + "Ã— ATR (" + str.tostring(stopDistance, format.mintick) + ")"
    table.cell(setupTable, 2, 13, stopAtrText, text_color=color.new(#B0BEC5, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    
