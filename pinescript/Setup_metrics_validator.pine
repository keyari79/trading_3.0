    // ========== CRITERION 5: ATR REGIME ==========
    table.cell(setupTable, 0, 7, "5. ATR Regime", text_color=color.new(#FFFFFF, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    table.cell(setupTable, 1, 7, crit5Display, text_color=color.new(#B0BEC5, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    table.cell(setupTable, 2, 7, "PASS", text_color=color.new(#4CAF50, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    
    // ========== CRITERION 6: DAILY REGIME ==========
    table.cell(setupTable, 0, 8, "6. Daily Regime", text_color=color.new(#FFFFFF, 0), bgcolor=color.new(#1C2428, 0), text_size=txtSize)
    table.cell(setupTable, 1, 8, crit6Display, text_color=color.new(#B0BEC5, 0), bgcolor=color.new(#1C2428, 0), text_size=txtSize)
    table.cell(setupTable, 2, 8, crit6Pass ? "PASS" : "FAIL", text_color=crit6Pass ? color.new(#4CAF50, 0) : color.new(#F44336, 0), bgcolor=color.new(#1C2428, 0), text_size=txtSize)
    
    // ========== CRITERION 7: 4H REGIME ==========
    table.cell(setupTable, 0, 9, "7. 4H Regime", text_color=color.new(#FFFFFF, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    table.cell(setupTable, 1, 9, crit7Display, text_color=color.new(#B0BEC5, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    table.cell(setupTable, 2, 9, crit7Pass ? "PASS" : "FAIL", text_color=crit7Pass ? color.new(#4CAF50, 0) : color.new(#F44336, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    
    // ========== RISK PARAMETERS HEADER ==========
    table.cell(setupTable, 0, 10, "RISK PARAMETERS", text_color=color.new(#FFFFFF, 0), bgcolor=color.new(#37474F, 0), text_size=txtSize)
    table.merge_cells(setupTable, 0, 10, 2, 10)
    
    // ========== ATR VALUE ==========
    table.cell(setupTable, 0, 11, "ATR(14) Value", text_color=color.new(#E8E8E8, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    atrText = str.tostring(atr, format.mintick)
    table.cell(setupTable, 1, 11, atrText, text_color=color.new(#64B5F6, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    table.cell(setupTable, 2, 11, "P" + str.tostring(atrPercentile, "#"), text_color=color.new(#B0BEC5, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
    
    // ========== POSITION SIZE ==========
    table.cell(setupTable, 0, 12, "Position Size", text_color=color.new(#E8E8E8, 0), bgcolor=color.new(#1C2428, 0), text_size=txtSize)
    posText = str.tostring(positionSize, "#") + " EUR (" + atrStatus + " regime)"
    table.cell(setupTable, 1, 12, posText, text_color=color.new(#FFD54F, 0), bgcolor=color.new(#1C2428, 0), text_size=txtSize)
    table.cell(setupTable, 2, 12, systemStatus, text_color=statusColor, bgcolor=color.new(#1C2428, 0), text_size=txtSize)
    
    // ========== STOP LOSS (ATR-ONLY) ==========
    table.cell(setupTable, 0, 13, "Stop Loss", text_color=color.new(#E8E8E8, 0), bgcolor=color.new(#263238, 0), text_size=txtSize)
