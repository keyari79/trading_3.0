// ============================================================================
// STAGE 3: SETUP - METRICS VALIDATOR v3.1 (ATR-ONLY VERSION)
// ============================================================================
// Created: 2025-11-14 02:00 CET
// Purpose: Validate ALL 7 binary setup criteria for Framework v1.6
// Displays: Binary 7/7 decision, all thresholds, risk parameters, clear status
// 
// CRITICAL UPDATE v3.1: Removed ALL "pips" references - pure ATR multiples only
// - Framework v1.6 is 100% ATR-based, not pips-based
// - All distances shown as ATR multiples (universal across instruments)
// - Cleaner, more framework-consistent display
// ============================================================================

// ============================================================================
// INPUTS - Display Settings
// ============================================================================

string tablePos = input.string("top_right", "Table Position", options=["top_left", "top_center", "top_right", "middle_left", "middle_center", "middle_right", "bottom_left", "bottom_center", "bottom_right"], group="Display")
string tableSize = input.string("small", "Text Size", options=["auto", "tiny", "small", "normal", "large"], group="Display")
bool showLegend = input.bool(false, "Show Detailed Legend", group="Display")
bool showInvalidationLines = input.bool(true, "Show Invalidation Lines", group="Display")
bool showEntryZone = input.bool(true, "Show Entry Zone Box", group="Display")
bool showRiskLines = input.bool(true, "Show Stop/Target Lines", group="Display")

// ============================================================================
// INPUTS - EMA Settings
// ============================================================================

int emaFast = input.int(8, "Fast EMA", minval=1, group="EMA Settings")
int emaMid = input.int(21, "Mid EMA", minval=1, group="EMA Settings")
int emaSlow = input.int(55, "Slow EMA", minval=1, group="EMA Settings")

// ============================================================================
// INPUTS - ATR Settings
// ============================================================================

int atrPeriod = input.int(14, "ATR Period", minval=1, group="ATR Settings")
int atrLookback = input.int(100, "ATR Lookback for Percentile", minval=50, maxval=500, group="ATR Settings")

// ============================================================================
// INPUTS - ADX Settings (CRITERION 1)
// ============================================================================

int adxLength = input.int(14, "ADX Length", minval=1, group="ADX Settings (Criterion 1)")
int adxSmoothing = input.int(14, "ADX Smoothing", minval=1, group="ADX Settings (Criterion 1)")
float adxThreshold = input.float(25.0, "ADX Threshold (â‰¥)", minval=0, maxval=100, group="ADX Settings (Criterion 1)")

// ============================================================================
// INPUTS - Gap Ratio Thresholds (CRITERION 4)
// ============================================================================

float gapMin = input.float(0.5, "Min Gap Ratio (Ã— ATR)", minval=0, step=0.1, group="Gap Ratio (Criterion 4)")
float gapMax = input.float(2.0, "Max Gap Ratio (Ã— ATR)", minval=0, step=0.1, group="Gap Ratio (Criterion 4)")
float gapIdealMin = input.float(0.7, "Ideal Min (Ã— ATR)", minval=0, step=0.1, group="Gap Ratio (Criterion 4)")
float gapIdealMax = input.float(1.5, "Ideal Max (Ã— ATR)", minval=0, step=0.1, group="Gap Ratio (Criterion 4)")

// ============================================================================
// INPUTS - ATR Regime Thresholds (CRITERION 5)
// ============================================================================

float atrP30 = input.float(30.0, "LOW Percentile (<)", minval=0, maxval=100, group="ATR Regime (Criterion 5)")
