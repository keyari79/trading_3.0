crit7Display = regime4H + " (Gap: " + str.tostring(gapRatio4H, "#.##") + "Ã—)" + (aligned4HLong ? " â†‘" : " â†“")

// ============================================================================
// BINARY DECISION: 7/7 VALIDATION
// ============================================================================

